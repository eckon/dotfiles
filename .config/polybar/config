[colors]
background = #DD222222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
okay = #50fa7b
warning = #ffb52a
critical = #ff0000

[settings]
screenchange-reload = true
format-underline =
format-overline =

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
width = 100%
height = 25
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-size = 0
border-color = #00000000

padding = 0
padding-left = 5
padding-right = 5

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0

modules-left = xkeyboard backlight alsa spotify
modules-center = date
modules-right = filesystem memory cpu network eth temperature battery

tray-position = left
tray-padding = 5
tray-offset-y = 1
tray-offset-x = -2

override-redirect = false
enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "KEY "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 180

mount-0 = /

label-mounted = %{F#555}FS %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%% (%used%)
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
label = %{F#555}BL%{F-} %percentage%%
; needs permission https://github.com/polybar/polybar/wiki/Module:-backlight
enable-scroll = false

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground-alt}
format-underline =
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "MEM "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%% (%gb_used%)

[module/network]
type = internal/network
; look up interface: $ ip link show
interface = wlp0s20f3
interval = 1

format-connected = <label-connected>
label-connected = %{F#555}DOWN%{F-} %downspeed% %{F#555}UP%{F-} %upspeed%

format-disconnected = Disconnected

[module/date]
type = internal/date
interval = 1

date = %A, %d.%m.%y

time = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% - %time%

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.foreground-alt}
label-muted = VOL muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
; get the correct interfaces with $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
full-at = 95

format-charging = <label-charging>
format-charging-underline = ${colors.warning}

format-discharging = <label-discharging>
format-discharging-underline = ${colors.critical}

format-full-underline = ${colors.okay}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 75

format = <label>
format-underline = ${colors.okay}
format-warn = <label-warn>
format-warn-underline = ${colors.critical}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/spotify]
type = custom/script
interval = 5
format-prefix = "MUSIC "
format-prefix-foreground = ${colors.foreground-alt}
format = <label>
exec = python3 ~/.config/polybar/spotify_status.py -f '{artist}: {song} - {album}' -t 100

; vim:ft=dosini
