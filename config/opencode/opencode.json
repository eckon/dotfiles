{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["README.md"],
  "agent": {
    "ask": {
      "mode": "primary",
      "permission": {
        "bash": "ask",
        "edit": "ask",
        "webfetch": "ask"
      }
    }
  },
  "mcp": {
    "browser": {
      "type": "local",
      "command": ["npx", "@agent-infra/mcp-server-browser@latest"],
      "enabled": true
    },
    "coding-docs": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  }
}
