{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["README.md"],
  "agent": {
    "ask": {
      "mode": "primary",
      "permission": {
        "bash": "ask",
        "edit": "ask",
        "webfetch": "ask"
      }
    }
  },
  "mcp": {
    "browser": {
      "type": "local",
      "command": ["npx", "@agent-infra/mcp-server-browser@latest"],
      "enabled": true
    },
    "browser-headless": {
      "type": "local",
      "command": [
        "npx",
        "@agent-infra/mcp-server-browser@latest",
        "--headless"
      ],
      "enabled": true
    },
    "coding-docs": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "pinecone": {
      "type": "local",
      "command": ["npx", "-y", "@pinecone-database/mcp"],
      "enabled": true,
      "environment": {
        "PINECONE_API_KEY": "{file:/home/eckon/.config/pinecone/pinecone_api_key.txt}"
      }
    },
    "rider": {
      "type": "remote",
      "url": "http://localhost:64342/sse",
      "enabled": false
    },
    "calendar": {
      "type": "local",
      "command": ["npx", "@cocal/google-calendar-mcp"],
      "enabled": true,
      "environment": {
        "GOOGLE_OAUTH_CREDENTIALS": "/home/eckon/.config/google-calendar-mcp/client_secret.json"
      }
    }
  }
}
