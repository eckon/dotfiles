{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["README.md", "AGENTS.md"],
  "permission": {
    "*": "allow",
    "bash": "ask",
    "edit": "ask",
    "webfetch": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
    },
  },
  "mcp": {
    "coding-docs": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
    },
  },
}
