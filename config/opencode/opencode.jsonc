{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["README.md", "AGENTS.md"],
  "permission": {
    "bash": {
      "*": "ask",
      // Deny commands that have dedicated tools
      "grep *": "deny",
      "find *": "deny",
      "cat *": "deny",
      "head *": "deny",
      "tail *": "deny",
      // Allow safe read-only commands
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "ls*": "allow",
    },
  },
  "mcp": {
    "coding-docs": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
    },
  },
}
