{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["README.md"],
  "agent": {
    "ask": {
      "mode": "primary",
      "permission": {
        "bash": "ask",
        "edit": "ask",
        "webfetch": "ask",
      },
    },
  },
  // depending on the mcp implementation, it will add a lot of context to each session, because of this some
  // mcps might be disabled here per default. these can be enabled in opencode itself via their ui
  "mcp": {
    "browser": {
      "type": "local",
      "command": ["npx", "@agent-infra/mcp-server-browser@latest"],
      "enabled": false,
    },
    "coding-docs": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
    },
  },
}
