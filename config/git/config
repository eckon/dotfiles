  name  = eckon

[core]
  pager = delta

[delta]
  navigate     = true
  line-numbers = true
  side-by-side = true
  paging       = always

[rerere]
  enable = true

[log]
  abbrevCommit = true

[commit]
  verbose = true

[mergetool "vscode_mergetool"]
  cmd = code --wait $MERGED

[merge]
  tool          = vscode_mergetool
  conflictstyle = diff3

[difftool "nvim_difftool"]
  cmd = "nvim -c \"packadd nvim.difftool\" -c \"DiffTool $LOCAL $REMOTE\""

[diff]
  tool = nvim_difftool

[pull]
  rebase = true

[rebase]
  autoStash = true

[fetch]
  prune = true

[branch]
  sort = -committerdate

[tag]
  sort = version:refname

[maintenance]
  auto     = false
  strategy = incremental

[include]
  path = ~/.config/git/alias

[includeIf "gitdir:~/Development/work/"]
  path = ~/.config/git/work

